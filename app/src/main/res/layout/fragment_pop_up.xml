<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="392dp"
        android:layout_height="88dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ayam" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:layout_width="292dp"
                android:layout_height="52dp"
                android:text="Nasi Geprek Ayam Sambal Bawang + Lalapan + Es Teh"
                android:textSize="21sp" />

            <TextView
                android:layout_width="292dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="5sp"
                android:text="IDR 14.000"
                android:textColor="@color/blue"
                android:textSize="19sp" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider"
        android:layout_width="392dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="392dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialDivider">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_plus_min"
            android:src="@drawable/ic_minus" />

        <TextView
            android:layout_width="272dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_txt"
            android:gravity="center"
            android:lineSpacingExtra="3sp"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_plus_min"
            android:src="@drawable/ic_plus" />

    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="392dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:layout_marginTop="32dp"
        android:layout_weight="0.5"
        android:background="@drawable/rounded_txt"
        android:gravity="center"
        android:hint="Catatan Untuk Menu"
        android:lineSpacingExtra="3sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider2"
        android:layout_width="392dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialDivider2">

        <Button
            android:id="@+id/batal"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:text="@string/batal"/>

        <Button
            android:id="@+id/pilih"
            android:layout_width="280dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="@string/pilih" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>